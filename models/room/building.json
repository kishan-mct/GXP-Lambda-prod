{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Building",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "hotel_id": {
            "type": "string"
        },
        "building_name": {
            "type": "string",
            "maxLength": 200
        },
        "short_name": {
            "type": "string",
            "maxLength": 50
        },
        "images": {
            "type": "string",
            "format": "uri"
        },
        "total_floor": {
            "type": "integer",
            "minimum": 0,
            "default": 0
        },
        "total_room": {
            "type": "integer",
            "minimum": 0,
            "default": 0
        },
        "is_active": {
            "type": "boolean",
            "default": true
        }
    },
    "required": [
        "hotel_id",
        "building_name",
        "short_name",
        "total_floor",
        "total_room",
        "is_active"
    ],
    "additionalProperties": false
}