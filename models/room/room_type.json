{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "RoomType",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "hotel": {
            "type": "string"
        },
        "bad_type": {
            "type": "string"
        },
        "name": {
            "type": "string",
            "maxLength": 200
        },
        "short_name": {
            "type": "string",
            "maxLength": 50
        },
        "total_room": {
            "type": "integer",
            "default": 0
        },
        "room_size": {
            "type": "number",
            "default": 0
        },
        "std_rate": {
            "type": "number",
            "default": 0
        },
        "kiosk_rate": {
            "type": "number",
            "default": 0
        },
        "max_adult": {
            "type": "integer",
            "default": 1
        },
        "max_children": {
            "type": "integer",
            "default": 0
        },
        "features": {
            "type": "array",
            "items": {}
        },
        "is_enable_ota": {
            "type": "boolean",
            "default": true
        },
        "is_enable_web": {
            "type": "boolean",
            "default": true
        },
        "is_enable_kiosk": {
            "type": "boolean",
            "default": true
        },
        "is_enable_chatbot": {
            "type": "boolean",
            "default": true
        },
        "is_common_type": {
            "type": "boolean",
            "default": false
        },
        "is_active": {
            "type": "boolean",
            "default": true
        },
        "hk_stay_over_credit": {
            "type": "integer",
            "default": 5
        },
        "hk_check_out_credit": {
            "type": "integer",
            "default": 10
        },
        "hk_stay_over_duration": {
            "type": "string"
        },
        "hk_check_out_duration": {
            "type": "string"
        },
        "priority_order": {
            "type": "integer",
            "default": 0
        }
    },
    "required": [
        "hotel",
        "bad_type",
        "name",
        "short_name",
        "features",
        "hk_stay_over_duration",
        "hk_check_out_duration"
    ],  "additionalProperties":false

}