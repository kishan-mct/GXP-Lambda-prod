{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Folio",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "hotel": {
            "type": "string",
            "format": "uuid"
        },
        "booking": {
            "type": "string",
            "format": "uuid"
        },
        "guest": {
            "type": "string",
            "format": "uuid"
        },
        "folio_number": {
            "type": "integer"
        },
        "is_default": {
            "type": "boolean",
            "default": false
        },
        "is_deposit_folio": {
            "type": "boolean",
            "default": false
        },
        "folio_transaction": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uuid"
            }
        }
    },
    "required": [
        "id",
        "hotel",
        "booking",
        "guest"
    ],
    "additionalProperties": false
}