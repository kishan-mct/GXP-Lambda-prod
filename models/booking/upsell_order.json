{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "UpsellOrder",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "booking": {
            "type": "string",
            "format": "uuid"
        },
        "upsell": {
            "type": "string",
            "format": "uuid"
        },
        "folio_transaction": {
            "type": "string",
            "format": "uuid"
        },
        "total_item": {
            "type": "integer",
            "default": 1
        },
        "amount": {
            "type": "number",
            "format": "decimal",
            "maximum": 999999999999999999.99,
            "default": 0.00
        },
        "approve_status": {
            "type": "string",
            "enum": [
                "approved",
                "rejected",
                "pending",
                "void"
            ],
            "default": "pending"
        },
        "reject_reason": {
            "type": "string",
            "maxLength": 250
        },
        "is_mandatory_purchase": {
            "type": "boolean",
            "default": false
        }
    },
    "required": [
        "id",
        "booking",
        "upsell",
        "folio_transaction",
        "total_item",
        "amount",
        "approve_status",
        "reject_reason",
        "is_mandatory_purchase"
    ],
    "additionalProperties": false
}