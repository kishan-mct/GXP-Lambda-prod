{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "HdAppFeature",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "hotel": {
            "type": "string",
            "format": "uuid"
        },
        "app_feature": {
            "type": "string",
            "format": "uuid"
        },
        "price": {
            "type": "number",
            "maximum": 999999999999999999.99,
            "default": 0.00
        },
        "is_plan_purchased": {
            "type": "boolean",
            "default": false
        },
        "start_date": {
            "type": "string",
            "format": "date",
            "nullable": true
        },
        "end_date": {
            "type": "string",
            "format": "date",
            "nullable": true
        },
        "icon": {
            "type": "string",
            "maxLength": 200,
            "nullable": true
        },
        "image": {
            "type": "string",
            "format": "uri",
            "maxLength": 250,
            "nullable": true
        },
        "page_condition": {
            "type": "array",
            "default": []
        },
        "is_active": {
            "type": "boolean",
            "default": false
        },
        "priority_order": {
            "type": "integer",
            "default": 0
        }
    },
    "required": [
        "hotel",
        "app_feature",
        "price",
        "is_plan_purchased",
        "is_active",
        "priority_order"
    ],
    "additionalProperties": false
}