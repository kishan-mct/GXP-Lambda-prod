{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CheckinGuestExperience",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "page_name": {
            "type": "string",
            "maxLength": 500
        },
        "slug_name": {
            "type": "string",
            "maxLength": 500
        },
        "page_tooltip": {
            "type": "string"
        },
        "preview_image": {
            "type": "string",
            "format": "uri",
            "maxLength": 250
        },
        "priority_order": {
            "type": "integer",
            "default": 0
        },
        "is_active": {
            "type": "boolean",
            "default": true
        }
    },
    "required": [
        "page_name",
        "priority_order",
        "is_active"
    ],
    "additionalProperties": false
}