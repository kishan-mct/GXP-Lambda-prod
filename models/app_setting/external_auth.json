{
  "$schema": "http://json-schema.org/draft-07/schema#",
  
  "title": "ExternalAuth",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "service_name": {
      "type": "string",
      "maxLength": 255
    },
    "login_url": {
      "type": "string",
      "format": "uri"
    },
    "username": {
      "type": "string",
      "maxLength": 255
    },
    "password": {
      "type": "string",
      "maxLength": 255
    },
    "client_id": {
      "type": "string",
      "maxLength": 255
    },
    "client_secret": {
      "type": "string"
    },
    "grant_type": {
      "type": "string",
      "maxLength": 255
    },
    "refresh_token": {
      "type": "string",
      "maxLength": 2000
    },
    "access_token": {
      "type": "string",
      "maxLength": 2000
    },
    "expires_in": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "service_name",
    "login_url",
    "username",
    "password",
    "client_id",
    "client_secret",
    "grant_type"
  ],
  "additionalProperties": false
}