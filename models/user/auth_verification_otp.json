{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "UserVerificationWiaOtp",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "user": {
            "type": "string"
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "mobile": {
            "type": "integer"
        },
        "mobile_iso": {
            "type": "string",
            "maxLength": 10
        },
        "email_otp_number": {
            "type": "string",
            "maxLength": 8
        },
        "mobile_otp_number": {
            "type": "string",
            "maxLength": 8
        },
        "is_verify_email_otp_number": {
            "type": "boolean",
            "default": false
        },
        "is_verify_mobile_otp_number": {
            "type": "boolean",
            "default": false
        },
        "verify_failed_message": {
            "type": "string",
            "maxLength": 250
        },
        "device_data": {
            "type": "object"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "email_otp_number",
        "mobile_otp_number"
    ],
    "additionalProperties": false
}