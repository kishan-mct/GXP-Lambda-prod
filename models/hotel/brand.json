{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Brand",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "maxLength": 255
    },
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 255
    },
    "mobile": {
      "type": "string",
      "maxLength": 20
    },
    "mobile_iso": {
      "type": "string",
      "maxLength": 20
    },
    "favicon_icon_image": {
      "type": "string",
      "maxLength": 250,
      "format": "uri"
    },
    "logo_file": {
      "type": "string",
      "maxLength": 250,
      "format": "uri"
    },
    "membership_reward_image": {
      "type": "string",
      "maxLength": 500,
      "format": "uri"
    },
    "membership_reward_tnc": {
      "type": "string"
    },
    "rewards_website_url": {
      "type": "string",
      "maxLength": 1000,
      "format": "uri"
    },
    "rewards_website_join_url": {
      "type": "string",
      "maxLength": 1000,
      "format": "uri"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "is_support_membership_rewards": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "name",
    "email",
    "mobile"
  ],
  "additionalProperties":false
}