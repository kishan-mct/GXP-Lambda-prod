{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hotel Brand",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "maxLength": 255
    },
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 255
    },
    "mobile": {
      "type": "string",
      "maxLength": 20
    },
    "mobile_iso": {
      "type": "string",
      "maxLength": 20
    },
    "favicon_icon": {
      "type": "string",
      "format": "uri",
      "maxLength": 250
    },
    "logo": {
      "type": "string",
      "format": "uri",
      "maxLength": 250
    },
    "membership_reward_image": {
      "type": "string",
      "format": "uri",
      "maxLength": 500
    },
    "membership_reward_tnc": {
      "type": "string"
    },
    "rewards_website_url": {
      "type": "string",
      "format": "uri",
      "maxLength": 1000
    },
    "rewards_website_join_url": {
      "type": "string",
      "format": "uri",
      "maxLength": 1000
    },
    "is_active": {
      "type": "boolean"
    },
    "is_support_membership_rewards": {
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "email",
    "mobile",
    "is_active",
    "is_support_membership_rewards"
  ],
  "additionalProperties": false
}