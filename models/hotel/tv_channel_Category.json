{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "TvChannelCategory",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "hotel": {
            "type": "string",
            "format": "uuid"
        },
        "name": {
            "type": "string",
            "maxLength": 250
        },
        "slug_name": {
            "type": "string",
            "maxLength": 500
        },
        "description": {
            "type": "string"
        },
        "image": {
            "type": "string",
            "maxLength": 250
        },
        "priority_order": {
            "type": "integer",
            "default": 0
        },
        "is_active": {
            "type": "boolean",
            "default": false
        }
    },
    "required": [
        "hotel",
        "name"
    ],
    "additionalProperties": false
}