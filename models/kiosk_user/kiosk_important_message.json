{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "KioskImportantMessage",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "kiosk_user": {
            "type": "string"
        },
        "message": {
            "type": "string"
        },
        "is_display": {
            "type": "boolean",
            "default": true
        },
        "priority_order": {
            "type": "integer",
            "default": 0
        }
    },
    "required": [
        "kiosk_user",
        "message"
    ],
    "additionalProperties": false
}